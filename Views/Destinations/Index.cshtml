@model List<Destination>

<!-- Style for uniform layout -->
<style>
    .destination-card-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        object-position: center;
    }

    .destination-card {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .destination-card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .btn.active {
        font-weight: bold;
        background-color: #0d6efd;
        color: white;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Available Destinations</h2>
        <a class="btn btn-success" asp-controller="Destinations" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add a new destination
        </a>
    </div>

    <!--Filtru pentru sortare-->
    <!--Viewbag passes temporary data from controller to view-->
    <form method="get" class="row mb-4">
        <div class="col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Search destinations..." value="@ViewBag.CurrentFilter" />
        </div>
        <div class="col-md-3">
            <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                <option value="" selected="@((ViewBag.CurrentSort as string) == "" ? "selected" : null)">Price: Low to High</option>
                <option value="price_desc" selected="@((ViewBag.CurrentSort as string) == "price_desc" ? "selected" : null)">Price: High to Low</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>



    <div class="row">
        @foreach (var destination in Model)
        {
            <div class="col-md-4 mb-4 d-flex">
                <div class="card destination-card shadow-sm w-100">
                    @if (!string.IsNullOrEmpty(destination.ImageUrl))
                    {
                        <img src="@destination.ImageUrl" class="destination-card-img card-img-top" alt="Image of @destination.Title" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/300x200?text=No+Image" class="destination-card-img card-img-top" alt="No image available" />
                    }

                    <div class="card-body destination-card-body">
                        <div>
                            <h5 class="card-title">@destination.Title</h5>
                            <p class="card-text">@destination.Description</p>
                            <p class="card-text">
                                <strong>Price:</strong> @destination.Price €
                            </p>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-controller="Destinations" asp-action="Edit" asp-route-id="@destination.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-controller="Destinations" asp-action="Delete" asp-route-id="@destination.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
