@model Destination

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit destination information</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter destination title" />
                            <span asp-validation-for="Title" class="text-warning"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter a description" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-warning"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label">Price (€)</label>
                            <input asp-for="Price" class="form-control" placeholder="Enter price in EUR" />
                            <span asp-validation-for="Price" class="text-warning"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Paste image URL" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Edit</button>
                            <a asp-controller="Destinations" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
