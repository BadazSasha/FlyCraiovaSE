@model Plane

<div action="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit plane information</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div action="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter a name" />
                            <span asp-validation-for="Name" class="text-warning"></span>
                        </div>
                        <div action="form-group mb-3">
                            <label asp-for="Model" class="form-label">Model</label>
                            <input asp-for="Model" class="form-control" placeholder="Enter a Model" />
                            <span asp-validation-for="Model" class="text-warning"></span>
                        </div>
                        <div action="form-group mb-3">
                            <label asp-for="NrSeats" class="form-label">Nr. Of Seats</label>
                            <input asp-for="NrSeats" class="form-control" placeholder="Enter the nr of seats" />
                            <span asp-validation-for="NrSeats" class="text-warning"></span>
                        </div>
                        <div action="form-group mb-3">
                            <label asp-for="NrPremiumSeats" class="form-label">Nr. Of Business class seats</label>
                            <input asp-for="NrPremiumSeats" class="form-control" placeholder="Enter a name" />
                            <span asp-validation-for="NrPremiumSeats" class="text-warning"></span>
                        </div>
                        <div action="form-group mb-3">
                            <label asp-for="NrNormalSeats" class="form-label">NrNormalSeats</label>
                            <input asp-for="NrNormalSeats" class="form-control" placeholder="Enter the number of normal seats" />
                            <span asp-validation-for="NrNormalSeats" class="text-warning"></span>
                        </div>
                        <div action="form-group mb-3">
                            <label asp-for="Manufactured" class="form-label">Manufactured</label>
                            <input asp-for="Manufactured" class="form-control" placeholder="Enter the year the plane was manufactured" />
                            <span asp-validation-for="Manufactured" class="text-warning"></span>
                        </div>
                        <!--Pt poze-->
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="control-label"></label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <!--Pt poze-->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Edit</button>
                            <a asp-controller="Planes" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}